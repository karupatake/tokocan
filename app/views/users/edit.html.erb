<div class="users-edit-wrapper">
  <div class="container">
    <div class="edit-user">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">アカウントページ変更</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :アカウント名, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :アカウントURL, class: 'text-white' %>
            <%= f.text_field :account, class: 'form-control' %>
          </div>
          <div class="form-group">
            <p><%= f.label :画像 %></p>
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :プロフィール文, class: 'text-white' %>
            <%= f.text_area :contents, :size=>"60x10", class: 'form-control' %>
          </div>

          <%= f.submit "登録", class: 'btn-block btn-edit-black' %>
          
          <% end %>
        </div>
      </div>
    </div>
  </div>
 </div>
